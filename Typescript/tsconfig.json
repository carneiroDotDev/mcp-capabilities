{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ES2022"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "types": [
            "node",
            "vitest/globals"
        ]
    },
    "include": [
        "**/types/**/*.d.ts",
        "**/src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}